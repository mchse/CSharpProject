@model List <Project.Models.Song>
@{
    ViewBag.Title = "Song Library";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var cookie = Request.Cookies["custID"];
    string custID = "";
    if (cookie != null)
    {
        custID = cookie.Value;
    }
}

<h2>Song Library</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Artist</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in Model)
        {
            <tr>
                <td>@song.Title</td>
                <td>@song.Artist</td>
                @*<td><a href="/Song/RegisterSong/@song.Id/@custID">Add</a></td>*@
            <td>@Html.ActionLink("Add", "RegisterSong", "Song", new { id = song.Id, custId = custID }, null)</td>
            </tr>
        }
    </tbody>
</table>